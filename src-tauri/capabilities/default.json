{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "http:allow-fetch",
    "http:allow-fetch-send",
    "http:allow-fetch-cancel",
    "http:allow-fetch-read-body",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "http://**/*" }, 
        { "url": "https://**/*" },
        { "url": "http://localhost:*/*" }
      ]
    }
  ]
}
